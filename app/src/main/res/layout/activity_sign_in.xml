<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignIn">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/edt"
        android:layout_centerInParent="true"
        android:background="@color/colorPrimary"
        android:orientation="vertical">
    </LinearLayout>

    <LinearLayout
        android:id="@+id/edt"
        android:orientation="vertical"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/aller"
            android:text="Ingresar"
            android:textColor="@color/colorPrimary"
            android:textSize="36sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"/>
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edtPhone"
            android:hint="Numero de telefono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorEdt"
            android:textColor="@color/colorEdt"
            android:textSize="24sp"
            android:inputType="phone"
            app:met_baseColor="@color/colorEdt"
            app:met_floatingLabel="highlight"
            app:met_maxCharacters="12"
            app:met_primaryColor="@color/colorEdt"
            app:met_singleLineEllipsis="true"
            android:fontFamily="@font/aller"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edtPassword"
            android:hint="ContraseÃ±a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorEdt"
            android:textColor="@color/colorEdt"
            android:textSize="24sp"
            android:inputType="textPassword"
            app:met_baseColor="@color/colorEdt"
            app:met_floatingLabel="highlight"
            app:met_maxCharacters="12"
            app:met_primaryColor="@color/colorEdt"
            app:met_singleLineEllipsis="true"
            android:fontFamily="@font/aller"/>

        <com.rey.material.widget.CheckBox
            android:id="@+id/chk_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            style="@style/Material.Drawable.CheckBox"
            android:text="Recuerdame"
            app:cbd_tickColor="@color/colorPrimary"/>
    </LinearLayout>

    <Button
        android:id="@+id/signinBtn"
        android:text="Ingresar"
        android:textColor="@android:color/white"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimary"
        android:fontFamily="@font/aller"/>
</RelativeLayout>